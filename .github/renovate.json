{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>go-vela/renovate-config"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^\\.github/workflows/prerelease\\.yml$"
      ],
      "matchStrings": [
        "# renovate: datasource=github-releases depName=chainguard-dev/kaniko\\s+echo \"KANIKO_VERSION=(?<currentValue>v[0-9.]+)\" >> \\$GITHUB_ENV"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "chainguard-dev/kaniko",
      "extractVersionTemplate": "^v(?<version>.+)$"
    },
    {
      "fileMatch": [
        "^Dockerfile$"
      ],
      "matchStrings": [
        "# renovate: datasource=github-releases depName=chainguard-dev/kaniko\\s+ARG KANIKO_IMAGE=target/kaniko/executor:debug-(?<currentValue>v[0-9.]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "chainguard-dev/kaniko",
      "extractVersionTemplate": "^v(?<version>.+)$"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["github-releases"],
      "matchDepNames": ["chainguard-dev/kaniko"],
      "groupName": "chainguard-dev/kaniko"
    }
  ]
}
